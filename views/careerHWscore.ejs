	<script type="text/javascript">
		var num = 2,
			$rating = $('#rating'),
			$item = $rating.find('.rating-item');

		//點亮星星
		var lightOn = function(num){
			$item.each(function(){
				if($(this).index() < num){
					$(this).css('background-position','0 -32px');
				}else{
					$(this).css('background-position','0 0');
				}
			});
		}

		//初始化,點亮num個星星
		lightOn(num);

		$item.on('mouseover',function(){//滑鼠移入時,觸發相應操作
			lightOn($(this).index() + 1);
		}).on('click',function(){//滑鼠點選時,觸發相應操作
			num = $(this).index() + 1;
		});

		//滑鼠移出是,觸發相應的操作
		$rating.on('mouseout',function(){
			lightOn(num);
		});
	</script>

